{
  "name": "build-ota-electron-builder",
  "description": "fkaroundbuilder&findout",
  "author": "Danny",
  "version": "2.3.0",
  "license": "MIT",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start:release-server": "node ../minio-s3/start.js",
    "dev": "cross-env NODE_ENV=development electron-webpack dev",
    "rm-dist": "rimraf dist",
    "compile": "cross-env NODE_ENV=production yarn rm-dist && electron-webpack",
    "dist": "cross-env NODE_ENV=production yarn compile && electron-builder",
    "dist:dir": "cross-env NODE_ENV=production yarn dist --dir -c.compression=normal -c.mac.identity=null",
    "publish": "cross-env NODE_ENV=production yarn start:release-server && dotenv -- electron-builder --publish always",
    "release": "cross-env NODE_ENV=production yarn start:release-server && dotenv -- yarn compile && dotenv -- electron-builder --publish always"
  },
  "dependencies": {
    "electron-log": "^5.4.2",
    "electron-updater": "^6.6.2",
    "source-map-support": "^0.5.16"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-loader": "^8.2.5",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "electron-webpack": "^2.8.2",
    "html-webpack-plugin": "^4.5.2",
    "rimraf": "^6.0.1",
    "webpack": "^4.46.0"
  },
  "electronWebpack": {
    "main": {
      "sourceDirectory": "src/main"
    },
    "renderer": {
      "sourceDirectory": "src/renderer",
      "webpackConfig": "webpack.renderer.config.js"
    }
  },
  "build": {
    "beforePack": "scripts/build/pre-pack.js",
    "extraResources": [
      "public/**/*"
    ],
    "publish": {
      "provider": "s3",
      "endpoint": "http://localhost:9000",
      "bucket": "releases"
    },
    "appId": "com.build-ota-electron-builder.app",
    "directories": {
      "output": "dist"
    },
    "afterSign": "scripts/build/ad-hoc-signature.js",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "identity": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}